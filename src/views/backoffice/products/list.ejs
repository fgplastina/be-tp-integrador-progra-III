<%- include('../partials/header', { title: 'Listado de Productos' }) %>

<main>
  <h1>Listado de Productos</h1>
  <a href="/backoffice/products/create" class="button">Agregar producto</a>
  <br><br>

  <table>
    <thead>
      <tr>
        <th>ID</th>
        <th>Nombre</th>
        <th>Precio</th>
        <th>Categoría</th>
        <th>Imagen</th>
        <th>Acciones</th>
      </tr>
    </thead>
    <tbody>
      <% if (products && products.length > 0) { %>
        <% products.forEach(product => { %>
          <tr>
            <td><%= product.id %></td>
            <td><%= product.name %></td>
            <td>$<%= product.price %></td>
            <td><%= product.category_name || 'Sin categoría' %></td>
            <!--   TODO: mostrar image -->
            <td><%= product.image_url || 'Sin Imagen' %></td>
            <td>
              <a href="/backoffice/products/<%= product.id %>/edit" class="button">Editar</a>
              <a href="/backoffice/products/<%= product.id %>/delete" class="button button-danger">Eliminar</a>
            </td>
          </tr>
        <% }) %>
      <% } else { %>
        <tr>
          <td colspan="6">No hay productos cargados.</td>
        </tr>
      <% } %>
    </tbody>
  </table>
</main>

<%- include('../partials/footer') %>
